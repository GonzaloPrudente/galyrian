#galyrian
	width 100%
	height 100%
	position relative
	overflow hidden
	font-family sans-serif
	#fotos
		width 100%
		height 100%
		display flex
		flex-direction row
		flex-wrap no-wrap
		.foto
			display flex
			justify-content center
			align-items center
			height 100%
			width 100%
			img
				height 100%
				max-width 100%
				object-fit contain
				-webkit-user-drag none
	#controles
		display block
		position absolute
		width 100%
		height auto
		bottom 0
		margin 0 auto
		#pbar
			width 100%
			margin 0 auto
			span
				display block
				height 5px
				width 100%
				box-shadow 0 -1px 10px 0 rgba(167,52,221,1)
				background linear-gradient(to right, rgba(83,227,236,1) 0%,rgba(167,52,221,1) 100%)
		#caption
			position absolute
			width 100%
			height 100%
			display flex
			flex-direction column
			justify-content space-between
			align-items flex-start
			opacity 0
			bottom 0
			padding 0 1rem
			transition .3 all ease-in
			box-sizing border-box
			h2
				color #fff
				font-size 1.5rem
				text-shadow 0 0 2px #000000
			p
				font-size 1rem
				color #fff
				text-shadow 0 0 2px #000000
		#botones
			position absolute
			bottom 0
			width 100%
			height calc(100% + 5px)
			display flex
			flex-direction row
			justify-content space-between
			align-items center
			box-sizing border-box
			& > i
				display none
			#reproduccion
				width 100%
				height 100%
				display flex
				justify-content center
				align-items center
				opacity 0
				bottom 0
				& > i
					font-size 5rem
					color #fff
		&.active
			height 100%
			background linear-gradient(to bottom, rgba(0,0,0,0.6) 0%,rgba(0,0,0,0) 30%,rgba(0,0,0,0) 70%,rgba(0,0,0,0.6) 100%)
			#caption
				opacity 1

@media all and (min-width:720px)
	#galyrian
		#controles
			#caption
				padding 0 2rem
				h2
					font-size 2rem
				p
					font-size 1.3rem
			#botones
				& > i
					color #fff
					font-size 3rem
					height 100%
					padding 0 2rem
					display flex
					align-items center
					opacity 0
					transition .2s all ease-out
					&:hover
						opacity 1
						background-color rgba(0,0,0,0.3)
					#reproduccion
						& > i
							font-size 10rem