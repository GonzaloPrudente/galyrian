block CSS
	style.
		body {
			background-color: #ecf0f1;
		}
		header > figure > img {
			width: 100%;
			height: auto;
			display: block;
			margin: 0 auto;
		}
		.contenedor {
			width: 100%;
			height: 50vh;
			background-color: #7d8de5;
		}
		@media all and (min-width:720px) {
			header > figure > img {
				width: 50%;
			}
			.contenedor {
				height: 80vh;
			}
		}

