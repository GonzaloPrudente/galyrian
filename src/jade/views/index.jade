extends ../modelo.jade

block META
	meta(name="description", content="Una Galería")
	link(rel="canonical" href="")

block CSS
	style.
		@import 'https://fonts.googleapis.com/css?family=Open+Sans:500,700|Roboto:300';
		body {
			background-color: #ecf0f1;
		}
		body > h1,
		body > h2,
		body > h3 {
			font-family: 'Open Sans';
			font-weight: 700;
		}
		body > h2 {
			width: 90%;
			border-bottom: 1px solid #282828;
			padding: .5rem 0;
		}
		body p, li {
			font-family: 'Roboto';
			font-weight: 300;
			font-size: 1.2rem;
			-webkit-user-select: none;
			cursor: default;
			padding: 0;
			margin: 0;
		}
		body a {
			text-decoration: none;
			color: #7d8de5;
		}
		.code {
			background-color: #404040;
			padding: 1rem 1rem;
			color: #fff;
		}
		.code > p {
			cursor: text;
			-webkit-user-select: inherit;
			padding: 0 1rem;
		}
		.code > p:hover {
			background-color: #606060;
		}
		.code > p > span {
			color: #f1c40f;
		}
		header > figure > img {
			width: 100%;
			height: auto;
			display: block;
			margin: 0 auto;
		}
		.contenedor {
			width: 100%;
			height: 50vh;
			background-color: #7d8de5;
		}
		section {
			width: 100%;
			padding: 3rem 0;
		}
		section > article {
			display: block;
			width: 95%;
			max-width: 1024px;
			margin: 0 auto 2rem auto;
		}
		section > article:last-child {
			margin-bottom: 0;
		}
		.contenedor-centrado {
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			align-items: center;
			height: 180px;
		}
		a.btn {
			text-decoration: none;
			background-color: #7d8de5;
			padding: 1.3rem 2rem;
			color: #ecf0f1;
			text-align: center;
			transition: .3s all ease-out;
			font-weight: bold;
		}
		a.btn:hover {
			box-shadow: 0 0 15px 0 rgba(167,52,221,1);
		}
		a.btn > small {
			font-weight: normal;
		}
		@media all and (min-width:720px) {
			h2 {
				width: 50%;
			}
			header > figure > img {
				width: 50%;
			}
			.contenedor {
				height: 80vh;
			}
		}

